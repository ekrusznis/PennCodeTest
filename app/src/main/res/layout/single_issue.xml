<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:fitsSystemWindows="true"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/issueCard">


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/issueImage"
            android:background="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/issueImage"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/issueName"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Sample Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/issueUser"
                android:text="Sample User"
                android:textSize="12sp"
                android:maxLength="25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <TextView
                android:id="@+id/state"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Open"
                android:textColor="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textLayout"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/issueNum"
            android:text="1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
